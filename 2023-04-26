a=int(input("첫번째 숫자 입력 ")) #숫자를 입력받는 코드
b=input("연산기호") # 문자를 입력받는 코드
c=int(input("두번째 숫자 입력")) # 숫자를 입력받는 코드

if b=="+": # 만약 입력받은 문자가 이것 이라면 
  print(a,'+',c,"=", a+c) # 이렇게 실행하라

elif b=="-":# 만약 입력받은 문자가 이것 이라면 
  print(a,'-',c,"=",a-c)# 이렇게 실행하라

elif b=="*":# 만약 입력받은 문자가 이것 이라면 
  print(a,'*',c,"=",a*c)# 이렇게 실행하라

elif b=="/":# 만약 입력받은 문자가 이것 이라면 
  print(a,'/',c,"=",a/c)# 이렇게 실행하라
